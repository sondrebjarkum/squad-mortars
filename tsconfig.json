{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "outDir": "./dist",
    "typeRoots": [
      "./app/declarations.d.ts"
    ],
  },
  "include": [
    "app/**/*.js",
    "app/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}